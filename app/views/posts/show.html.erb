<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<% # Display any edits as hover-over title text.
  if @post.created_at === @post.updated_at
    date_value = @post.created_at.strftime("%Y/%m/%d at %H:%M")
    date_title = "No edits made"
  else
    date_value = @post.created_at.strftime("%Y/%m/%d at %H:%M") + '*'
    date_title = "Last edited: #{@post.updated_at.strftime("%Y/%m/%d %H:%M")}"
  end
%>

<%# Show the post. %>
<h1 class="postTitle"><%= @post.title %></h1>
<div class="postUserAndDate">
  By <span class="userName"><%= @user.name %></span>
  on <span class="postDate" title="<%= date_title %>"><%= date_value %></span>
</div>
<div class="postBody"><%= @markdown.render(@post.body).html_safe %></div>

<%# Show the footer nav. %>
<nav id="postFooterNav">
  <%= link_to 'Back to posts', posts_path %>
  <%= link_to 'Edit this post', edit_post_path(@post) %>
</nav>

<%# Show the comments. %>
<div class="comments">
  <h2>Comments</h2>

  <% @post.comments.each do |comment| %>
    <%# If the comment errored, there will be no 'created_at' %>
    <%# This smells pretty bad, but it seems to work. %>
    <% if comment.created_at %>
      <p>
        <div>
          <strong><%= comment.name %></strong>
        </div>
        <div>
          <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %>
        </div>
        <div>
          <%= comment.body %>
        </div>
      </p>
    <% end %>
  <% end %>

  <% if @post.comments.empty? %>
    <p>
      <div>
        There are no comments for this post.
      </div>
    </p>
  <% end %>
</div>

<hr>

<%# If we are editing an errored comment, remember the previous value. %>
<%# This will be used as the default value for the form fields. %>
<% if @comment %>
  <% name_value = @comment.name %>
  <% body_value = @comment.body %>
<% end %>

<h2>Add comment</h2>

<%= form_for([@post, @post.comments.build]) do |f| %>

  <% if @comment && @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Default values are okay to be nil. %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, value: name_value %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, value: body_value %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
